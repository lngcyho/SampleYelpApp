<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/maps"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/restaurant_details_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_small_margin"
        android:textSize="@dimen/view_holder_text_size"
        tools:text="restaurant_details_address" />
    <TextView
        android:id="@+id/restaurant_details_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_small_margin"
        android:textSize="@dimen/view_holder_text_size"
        tools:text="restaurant_details_coordinates" />
</LinearLayout>