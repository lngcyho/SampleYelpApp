<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="@dimen/row_padding_vertical">

    <ImageView
        android:id="@+id/restaurant_image"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"

        app:layout_constraintStart_toEndOf="@+id/restaurant_image"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/restaurant_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_holder_text_padding"
            android:textSize="@dimen/view_holder_text_size"
            android:textStyle="bold"
            tools:text="restaurant_title" />

        <TextView
            android:id="@+id/restaurant_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_holder_text_padding"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="restaurant_rating" />

        <TextView
            android:id="@+id/restaurant_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_holder_text_padding"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="restaurant_review_count" />

        <TextView
            android:id="@+id/restaurant_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_holder_text_padding"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="restaurant_location" />

        <TextView
            android:id="@+id/restaurant_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_holder_text_padding"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="restaurant_price" />

        <TextView
            android:id="@+id/restaurant_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_holder_text_padding"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="restaurant_categories" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>