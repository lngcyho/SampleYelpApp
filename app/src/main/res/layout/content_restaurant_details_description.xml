<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/content_small_margin"
    android:layout_marginStart="@dimen/content_small_margin"
    android:layout_marginTop="@dimen/content_small_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/restaurant_details_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_holder_text_padding"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="restaurant_details_rating" />

        <TextView
            android:id="@+id/restaurant_details_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_holder_text_padding"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="restaurant_details_review_count" />
    </LinearLayout>

    <LinearLayout
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/restaurant_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_holder_text_padding"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="restaurant_details_price" />

        <TextView
            android:id="@+id/restaurant_details_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_holder_text_padding"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="restaurant_details_categories" />
    </LinearLayout>

    <TextView
        android:id="@+id/restaurant_details_closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_holder_text_padding"
        android:textSize="@dimen/view_holder_text_size"
        tools:text="restaurant_details_closed">
    </TextView>
</LinearLayout>