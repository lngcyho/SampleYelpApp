<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restaurant_review_layout_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/restaurant_review_profile_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@mipmap/food1"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurant_review_profile_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_small_margin"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="Profile Name" />
        <TextView
            android:id="@+id/restaurant_review_rating_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_small_margin"
            android:textSize="@dimen/view_holder_text_size"
            tools:text="Rating 5" />
        <TextView
            android:id="@+id/restaurant_review_comment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_small_margin"
            android:textSize="@dimen/view_holder_text_size"
            android:maxLines="4"
            tools:text="@string/lorem_ipsum1" />
    </LinearLayout>
</LinearLayout>